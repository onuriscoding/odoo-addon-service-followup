<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- List View -->
    <record id="view_service_followup_tree" model="ir.ui.view">
        <field name="name">service.followup.tree</field>
        <field name="model">service.followup</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="appointment_date"/>
                <field name="assigned_user_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-primary="state == 'sent'" decoration-success="state == 'replied'" decoration-muted="state == 'closed'"/>
                <field name="rating"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_service_followup_form" model="ir.ui.view">
        <field name="name">service.followup.form</field>
        <field name="model">service.followup</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_sent" 
                            string="Mark Sent" 
                            type="object" 
                            invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_log_reply" 
                            string="Log Reply" 
                            type="object" 
                            invisible="state not in ('sent', 'replied')"
                            class="oe_highlight"/>
                    <button name="action_close" 
                            string="Close" 
                            type="object" 
                            invisible="state == 'closed'"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,replied,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="appointment_date"/>
                        </group>
                        <group>
                            <field name="assigned_user_id" widget="many2one_avatar_user"/>
                            <field name="sent_at" readonly="1"/>
                            <field name="replied_at" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="rating"/>
                            <field name="feedback"/>
                        </group>
                        <group>
                            <field name="chatbot_summary"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_service_followup_search" model="ir.ui.view">
        <field name="name">service.followup.search</field>
        <field name="model">service.followup</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="assigned_user_id"/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="filter_sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Replied" name="filter_replied" domain="[('state', '=', 'replied')]"/>
                <filter string="Closed" name="filter_closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="My Follow-ups" name="filter_my_followups" domain="[('assigned_user_id', '=', uid)]"/>
                <separator/>
                <filter string="Appointment Date" name="group_appointment_date" context="{'group_by': 'appointment_date'}"/>
                <filter string="Assigned To" name="group_assigned_user" context="{'group_by': 'assigned_user_id'}"/>
                <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_service_followup" model="ir.actions.act_window">
        <field name="name">Follow-ups</field>
        <field name="res_model">service.followup</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_my_followups': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first follow-up
            </p>
            <p>
                Track post-appointment follow-ups, log customer feedback, and manage reminders.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_service_followup_root"
              name="Follow-ups"
              sequence="10"
              web_icon="service_followup,static/description/icon.png"/>

    <menuitem id="menu_service_followup_all"
              name="All Follow-ups"
              parent="menu_service_followup_root"
              action="action_service_followup"
              sequence="10"/>

</odoo>
